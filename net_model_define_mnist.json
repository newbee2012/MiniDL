	"fullConnectLayer2": {
            "implClass": "FullConnectLayer",
            "initParams": [10],
            "topLayer": "lossLayer",
	    "lr_mult_weight": 1,
	    "lr_mult_bias": 2,
	    "weight_init": {
		"type":"XAVIER",
		"gaussian_std":1
	    },
	    "bias_init": {
		"type":"XAVIER",
		"gaussian_std":1
	    }
        },
        "lossLayer": {
            "implClass": "SoftmaxLayer",
            "initParams": [],
            "topLayer": null
        }
