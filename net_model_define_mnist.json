{
    "mode":"TRAIN",
    "modelDataFilePath": "./mnist_model_data.json",
    "trainDataFilePath": "./mnist_train_lmdb",
    "testDataFilePath": "./mnist_test_lmdb",
    "initModelByExistentData": false,
    "hyperParameters": {
        "MAX_ITER_COUNT": 10000,
