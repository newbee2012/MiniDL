	    "weight_init": {
		"type":"XAVIER",
		"gaussian_std":1
	    },
	    "bias_init": {
		"type":"XAVIER",
		"gaussian_std":1
	    }
        },
        "reluLayer": {
            "implClass": "ReluLayer",
